<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="10dp"
        >

        <RelativeLayout
            android:id="@+id/rl_color_clone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_grey"
            >
            <ImageView
                android:id="@+id/iv_printer"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/ic_printer"
                android:tint="@color/light_darker"
                android:layout_centerInParent="true"
                android:padding="8dp"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/rl_color_clone"
            android:layout_toStartOf="@+id/rl_end"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_text"
                android:text="Printer Name"
                />

            <TextView
                android:id="@+id/tv_printer_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SKU123"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/rl_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_is_print"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receipts"
                />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_1"
        />

</LinearLayout>