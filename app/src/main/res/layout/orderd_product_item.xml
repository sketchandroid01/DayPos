<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/linearProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product 1"
            android:textColor="@color/black"
            android:maxLines="2"
            android:paddingEnd="5dp"
            android:layout_toStartOf="@+id/tv_calculate_price"
            />

        <TextView
            android:id="@+id/tv_calculate_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="100.00"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 x 100.00"
            android:layout_below="@+id/tv_product_name"
            />

        <TextView
            android:id="@+id/tv_modifiers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Option 1 (200.00)"
            android:layout_below="@+id/tv_qty"
            />

    </RelativeLayout>

</FrameLayout>